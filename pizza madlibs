adj1 = input("Enter an adjective: ")
nat = input("Enter a nationality: ")
pers = input("Enter a  person: ")
n1 = input("Enter a noun: ")
adj2 = input("Enter another adjective: ")
n2 = input("Enter another noun: ")
adj3 = input("Enter another adjective: ")
adj4 = input("Enter another adjective: ")
pn = input("Enter a plural noun: ")
num1 = input("Enter a number: ")
sh = input("Enter a shapes: ")
fd1 = input("Enter a food: ")
fd2 = input("Enter another food: ")
num2 = input("Enter another number: ")

print("Pizza was invented by a " + adj1 + " " + nat + " chef named " + pers + ".")
print("To make a pizza, you need to take a lump of " + n1 + ", and make a thin, round " + adj2 + " " + n2 + ".")
print("Then you cover it with " + adj3 + " sauce, " + adj4 + " cheese, and fresh chopped " + pn + ".")
print(num1 + " - pizzas are best eaten fresh, but " + sh + " pizzas are best eaten frozen.")
print("Some kids like " + fd1 + " pizza the best, but my favorite is the " + fd2 + " pizza.")
print("If I could, I would eat pizza " + num2 + " times a day!")
